<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonText" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="ContactButton" parent="@style/ButtonText">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:background">@drawable/btn_general_contact</item>
    </style>

</resources>